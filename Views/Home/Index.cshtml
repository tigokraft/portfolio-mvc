        new {name="C", icon="devicon-c-plain", color="#A8B9CC"},
        new {name="C++", icon="devicon-cplusplus-plain", color="#00599C"},
        new {name="C#", icon="devicon-csharp-plain", color="#239120"},
        new {name="Rust", icon="devicon-rust-plain", color="#CE422B"},
        new {name="TypeScript", icon="devicon-typescript-plain", color="#3178C6"},
        new {name="JavaScript", icon="devicon-javascript-plain", color="#F7DF1E"},
        new {name="Flutter", icon="devicon-flutter-plain", color="#02569B"},
        new {name="Python", icon="devicon-python-plain", color="#3776AB"}
