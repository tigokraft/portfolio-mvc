@{
  ViewData["Title"] = "Tiago Oliveira";
}

<section class="hero">
  <div class="hero__text">
    <h1 class="hero__title">
      Developing<br>your <span class="hero__accent">frustrations</span>
    </h1>
    <p class="hero__subtitle">
      I turn ideas into fast, type-safe, maintainable software.
    </p>
    <button class="hero__cta" onclick="scrollToSkills()">see my stack</button>
  </div>
</section>

<section id="knowledge" class="skills">
  <h2 class="skills__title">Knowledge stack</h2>

  <div class="skills__galaxy">
    @{
      var skills = new[] {
        new {name="C", icon="devicon-c-plain", color="#A8B9CC"},
        new {name="C++", icon="devicon-cplusplus-plain", color="#00599C"},
        new {name="C#", icon="devicon-csharp-plain", color="#239120"},
        new {name="Rust", icon="devicon-rust-plain", color="#CE422B"},
        new {name="TypeScript", icon="devicon-typescript-plain", color="#3178C6"},
        new {name="JavaScript", icon="devicon-javascript-plain", color="#F7DF1E"},
        new {name="Flutter", icon="devicon-flutter-plain", color="#02569B"},
        new {name="Python", icon="devicon-python-plain", color="#3776AB"}
        };
      foreach (var s in skills)
      {
        <div class="skill-card" data-color="@s.color">
          <i class="@s.icon colored"></i>
          <span class="skill-card__name">@s.name</span>
        </div>
      }
    }
  </div>
</section>

<section id="work" class="work">
  <h2 class="work__title">Shipped work</h2>
  <div class="work__grid">
    <div class="project">
      <iframe class="project__preview" src="https://fin-sync-web.vercel.app" loading="lazy"></iframe>
      <div class="project__content">
        <h3 class="project__name">Finsync</h3>
        <p class="project__desc">Full-stack finance dashboard – Next.js, C# micro-services, Postgres</p>
      </div>
    </div>

    <div class="project">
      <iframe class="project__preview" src="https://vexoshop.eu" loading="lazy"></iframe>
      <div class="project__content">
        <h3 class="project__name">Vexo Shop</h3>
        <p class="project__desc">High-performance e-commerce – ASP.NET Core, Redis, Docker</p>
      </div>
    </div>
  </div>
</section>